<Window x:Class="Cookmaster.Views.AddRecipeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cookmaster.Views"
        mc:Ignorable="d"
        Title="AddRecipeWindow" Height="450" Width="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Add new recipe"
                   FontSize="22"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

            <StackPanel Grid.Row="1" VerticalAlignment="Top">

                <TextBlock Text="Name:" FontWeight="SemiBold"/>
                <TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Text="Category:" FontWeight="SemiBold"/>
                <TextBox Text="{Binding Category, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Text="Ingredients:" FontWeight="SemiBold"/>
                <TextBox Text="{Binding Ingredients, UpdateSourceTrigger=PropertyChanged}"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     Height="80"
                     VerticalScrollBarVisibility="Auto"/>

                <TextBlock Text="Instructions:" FontWeight="SemiBold"/>
                <TextBox Text="{Binding Instructions, UpdateSourceTrigger=PropertyChanged}"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     Height="120"
                     VerticalScrollBarVisibility="Auto"/>

                <TextBlock Text="Date:" FontWeight="SemiBold"/>
                <DatePicker SelectedDate="{Binding Date}" />

                
            </StackPanel>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button Content="Add" Command="{Binding SaveCommand}" Width="100" Height="35" />
                <Button Content="Cancel" Command="{Binding CancelCommand}" Width="100" Height="35" />
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>
